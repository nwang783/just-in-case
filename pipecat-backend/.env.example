# Daily.co Configuration (WebRTC Transport)
DAILY_API_KEY=your_daily_api_key_here
DAILY_ROOM_URL=https://your-domain.daily.co/your-room-name

# OpenAI Configuration (LLM and TTS)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o  # or gpt-4o-mini, gpt-3.5-turbo

# Deepgram Configuration (STT)
DEEPGRAM_API_KEY=deepgram_api_key_here

# Alternative LLM: Anthropic Claude (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Alternative TTS: ElevenLabs (optional)
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# ELEVENLABS_VOICE_ID=your_voice_id_here

# Alternative TTS: Cartesia (optional)
# CARTESIA_API_KEY=your_cartesia_api_key_here
# CARTESIA_VOICE_ID=79a125e8-cd45-4c13-8a67-188112f4dd22  # Default: British Lady
# CARTESIA_MODEL=sonic-english  # Cartesia TTS model

# Application Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENVIRONMENT=development  # development, staging, production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Bot Configuration
BOT_NAME=Case Interview Coach
BOT_GREETING=Hi! I'm ready to practice a case interview with you. Should we get started?

# VAD (Voice Activity Detection) Configuration
# Silero VAD runs locally on CPU for fast speech detection
VAD_ENABLED=true
VAD_CONFIDENCE=0.7  # Confidence threshold (0.0-1.0) - only change after testing
VAD_START_SECS=0.2  # Seconds before confirming speech start (lower = more responsive)
VAD_STOP_SECS=0.8   # Seconds of silence before confirming speech stop (0.2 if using turn detection)
VAD_MIN_VOLUME=0.6  # Minimum volume threshold (0.0-1.0) - only change after testing

# Turn Detection Configuration
# Smart turn detection for better conversation flow (requires VAD_STOP_SECS=0.2)
TURN_DETECTION_ENABLED=false
